
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="~/Content/reset.css" />
    <link rel="stylesheet" href="~/Content/phong.css" />
    <title>XacThucTaiKhoan</title>
</head>
<body>
    <div class="container" id="wrapper">
        <div class="row">
            <div class="col-sm-offset-4 col-sm-4">
                <form class="form-horizontal" id="form-login" action="/Admin/Login" method="post" >
                    <div>
                        <h2 id="heading">YÊU CẦU XÁC THỰC </h2>
                        <div class="form-group">
                            <label class="control-label col-sm-3">ID tài khoản</label>
                            <div class="col-sm-9">
                                <input type="text" class="form-control" id="id" name="id" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3">Mật khẩu</label>
                            <div class="col-sm-9">
                                <input type="password" class="form-control" id="matkhau" name="matkhau" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-sm-3"></label>
                            <div class="col-sm-9">
                                <input type="submit" class="form-control" value="Đăng Nhập" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>

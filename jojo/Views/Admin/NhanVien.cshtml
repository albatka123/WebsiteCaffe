@using Cafe.Models
@{
    Layout = null;
    List<nhanvien> nhanvien = ViewBag.nhanvien as List<nhanvien>;
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/Content/bootstrap.min.css" type="text/css" />
    <script src="/Scripts/jquery-3.1.1.min.js"></script>
    <title>CapNhatNhanVien</title>
    <script>
        function Xoa(id) {
            var r = confirm("Bạn có chắc muốn xóa");
            if (r == true) {
                window.location = "/Admin/XoaNhanVien?id=" + id;
            }
        }
    </script>
</head>
<body>
    @RenderPage("/Views/Share/nav_admin.cshtml")
    <div class="container">
        <div class="pull-right">
            <a href="/Admin/ThemNhanVien" type="button" class="btn btn-success btn-lg">Thêm Nhân Viên</a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th class="col-sm-1">STT</th>
                    <th class="col-sm-3">Họ và tên</th>
                    <th class="col-sm-2">Công việc</th>
                    <th class="col-sm-2">Tên tài Khoản</th>
                    <th>Chọn</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < nhanvien.Count; i++)
                {
                    <tr>
                        <td class="col-sm-1">@(i + 1)</td>
                        <td class="col-sm-3">@nhanvien[i].hovaten</td>
                        <td class="col-sm-2">@nhanvien[i].congviec</td>
                        <td class="col-sm-2">@nhanvien[i].taikhoan</td>
                        <td>
                            <div class="btn-group">
                                <a href="/Admin/ChiTietNhanVien?id=@nhanvien[i].id" class="btn btn-primary">Chi Tiết</a>
                                <a href="/Admin/CapNhatNhanVien?id=@nhanvien[i].id" class="btn btn-success">Cập Nhật</a>
                                <a href="#" onclick="Xoa('@nhanvien[i].id');return false" class="btn btn-danger">Xóa</a>
                   
</div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
